<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weizheng.forkedmain.LoggedInPage">

    <TextView
        android:id="@+id/logged_in_welcome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:fontFamily="casual"
        android:text="Welcome,"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logged_in_welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logged_in_welcome1"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/logged_in_currentPref_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPreferenceClick"
        android:text="Use current preferences"
        android:layout_above="@+id/logged_in_upload_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp" />

    <Button
        android:id="@+id/logged_in_discover_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover a recipe!"
        android:onClick="onDiscoverClick"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/logged_in_welcome1" />

    <Button
        android:id="@+id/logged_in_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onUploadClick"
        android:text="Upload"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/logged_in_discover_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/logged_in_upate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="onUpdatePrefClick"
        android:text="My Profile"
        android:layout_above="@+id/logged_in_sign_out_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/logged_in_sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/logged_in_upload_button"
        android:layout_marginBottom="21dp"
        android:text="Sign out"
        android:onClick="onSignOutClick"/>

</RelativeLayout>