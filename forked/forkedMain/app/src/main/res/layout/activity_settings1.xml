<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weizheng.forkedmain.Settings1">

    <TextView
        android:id="@+id/settings1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuisine preferences"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="83dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <CheckBox
        android:id="@+id/settings_cuisine_chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Chinese"
        android:layout_below="@+id/settings1Title"
        android:layout_alignStart="@+id/settings1Title"
        android:layout_marginStart="28dp" />

    <CheckBox
        android:id="@+id/settings_cuisine_malay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Malay"
        android:layout_below="@+id/settings_cuisine_chinese"
        android:layout_alignStart="@+id/settings_cuisine_chinese" />

    <CheckBox
        android:id="@+id/settings_cuisine_indian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settings_cuisine_malay"
        android:layout_below="@+id/settings_cuisine_malay"
        android:layout_marginTop="28dp"
        android:text="Indian" />

    <CheckBox
        android:id="@+id/settings_cuisine_western"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settings_cuisine_indian"
        android:layout_below="@+id/settings_cuisine_indian"
        android:layout_marginTop="28dp"
        android:text="Western" />

    <CheckBox
        android:id="@+id/settings_cuisine_korean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Korean"
        android:layout_below="@+id/settings_cuisine_western"
        android:layout_alignStart="@+id/settings_cuisine_western" />

    <Button
        android:id="@+id/settings_cuisine_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp"
        android:onClick="onCuisineClick"
        android:text="Next" />

</RelativeLayout>
