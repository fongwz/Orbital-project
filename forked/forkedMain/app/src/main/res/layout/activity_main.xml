<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weizheng.forkedmain.MainActivity">

    <TextView
        android:id="@+id/log_in_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

    <TextView
        android:id="@+id/log_in_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/log_in_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Login"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358" />

    <TextView
        android:id="@+id/log_in_email_textview"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignBaseline="@+id/log_in_email_edittext"
        android:layout_alignBottom="@+id/log_in_email_edittext"
        android:layout_toStartOf="@+id/log_in_email_edittext"
        android:text="Email :"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="258dp" />

    <EditText
        android:id="@+id/log_in_email_edittext"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="249dp"
        android:layout_below="@+id/log_in_text"
        android:layout_alignEnd="@+id/log_in_password_edittext"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/log_in_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/log_in_email_textview"
        android:layout_centerVertical="true"
        android:text="Password :"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="319dp" />

    <EditText
        android:id="@+id/log_in_password_edittext"
        android:layout_width="211dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="319dp"
        android:layout_marginStart="28dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/log_in_welcome" />

    <CheckBox
        android:id="@+id/log_in_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_in_password_edittext"
        android:layout_toEndOf="@+id/log_in_password_textview"
        android:text="Show password"
        android:textSize="12sp"
        android:onClick="loginDisplayPassword"/>

    <Button
        android:id="@+id/log_in_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:onClick="onLoginClick"
        android:text="LOGIN"
        android:layout_below="@+id/log_in_checkbox"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/log_in_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:onClick="onRegisterClick"
        android:text="Register an account"
        android:layout_below="@+id/log_in_login_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
