<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weizheng.forkedmain.LoggedInPage">

    <TextView
        android:id="@+id/logged_in_welcome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:fontFamily="casual"
        android:text="Welcome!"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/logged_in_currentPref_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logged_in_welcome1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="Use current preferences" />

    <Button
        android:id="@+id/logged_in_discover_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Discover a recipe!"
        android:layout_below="@+id/logged_in_currentPref_button"
        android:layout_alignEnd="@+id/logged_in_welcome1"
        android:onClick="onDiscoverClick" />

    <Button
        android:id="@+id/logged_in_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logged_in_discover_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="onUploadClick"
        android:text="Upload" />

</RelativeLayout>