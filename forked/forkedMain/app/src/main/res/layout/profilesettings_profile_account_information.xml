<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_information_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weizheng.forkedmain.profilesettings.ProfileAccountInformation">

    <TextView
        android:id="@+id/account_information_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="Account Information"
        android:textColor="@android:color/black"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/account_information_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:background="@drawable/profile_list"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="  Display Name:"
        android:textSize="30sp"
        android:layout_below="@+id/account_information_textview"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/account_information_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/profile_list"
        android:lineSpacingExtra="8sp"
        android:text="  Email Address:"
        android:textSize="30sp"
        android:layout_below="@+id/account_information_display"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/account_information_update_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:onClick="updateFields"
        android:text="Update details"
        android:textSize="18sp"
        android:layout_below="@+id/account_information_email"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
