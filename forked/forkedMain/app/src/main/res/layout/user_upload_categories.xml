<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.weizheng.forkedmain.userUploadSlide$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_upload_categories_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuisine"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="28sp" />

            <CheckBox
                android:id="@+id/user_upload_categories_chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"
                android:layout_below="@+id/user_upload_categories_cuisine"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/user_upload_categories_malay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malay"
                android:layout_below="@+id/user_upload_categories_chinese"/>

            <CheckBox
                android:id="@+id/user_upload_categories_indian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indian"
                android:layout_below="@+id/user_upload_categories_malay"/>

            <CheckBox
                android:id="@+id/user_upload_categories_western"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Western"
                android:layout_below="@+id/user_upload_categories_indian"/>

            <CheckBox
                android:id="@+id/user_upload_categories_korean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Korean"
                android:layout_below="@+id/user_upload_categories_western"/>

            <TextView
                android:id="@+id/user_upload_categories_taste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taste"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="28sp"
                android:layout_below="@+id/user_upload_categories_korean"
                android:layout_marginTop="40dp"/>

            <CheckBox
                android:id="@+id/user_upload_categories_sweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweet"
                android:layout_below="@+id/user_upload_categories_taste"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/user_upload_categories_sour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sour"
                android:layout_below="@+id/user_upload_categories_sweet"/>

            <CheckBox
                android:id="@+id/user_upload_categories_spicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spicy"
                android:layout_below="@+id/user_upload_categories_sour"/>

            <TextView
                android:id="@+id/user_upload_categories_dishtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dish Type"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="28sp"
                android:layout_below="@+id/user_upload_categories_spicy"
                android:layout_marginTop="40dp"/>

            <CheckBox
                android:id="@+id/user_upload_categories_meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meat"
                android:layout_below="@+id/user_upload_categories_dishtype"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/user_upload_categories_seafood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seafood"
                android:layout_below="@+id/user_upload_categories_meat"/>

            <CheckBox
                android:id="@+id/user_upload_categories_vegetables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetables"
                android:layout_below="@+id/user_upload_categories_seafood"/>

            <CheckBox
                android:id="@+id/user_upload_categories_dessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_upload_categories_vegetables"
                android:text="Dessert" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>