<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.weizheng.forkedmain.results.ResultDetails$PlaceholderFragment">

    <ImageView
        android:id="@+id/result_detail_summary_imageView"
        android:layout_width="120dp"
        android:layout_height="230dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/result_detail_summary_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/result_detail_summary_imageView"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/result_detail_summary_imageView"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/result_detail_summary_displayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/result_detail_summary_textView"
        android:layout_below="@+id/result_detail_summary_textView"
        android:layout_marginTop="18dp"
        android:text="Uploaded by:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/result_detail_summary_userDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_detail_summary_displayText"
        android:layout_alignStart="@+id/result_detail_summary_textView"/>

</RelativeLayout>